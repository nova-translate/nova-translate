    "tailwindcss": "3.4.17",
    "typescript": "5.2.2"
  },
  "manifest": {
    "default_locale": "en",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,css}": [
      "pnpm biome check --write",
      "git add"
    ]
  }
