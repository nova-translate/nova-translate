{
  "name": "nova-translate",
  "displayName": "Nova Translate",
  "version": "0.0.1",
  "description": "A fully AI-driven translate extension that helps you understand foreign languages effortlessly. ",
  "author": "lucas.liuchao@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
