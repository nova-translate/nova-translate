    "@types/lodash-es": "^4.17.12",
    "@types/mousetrap": "^1.6.15",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@types/tiny-segmenter": "^0.2.0",
